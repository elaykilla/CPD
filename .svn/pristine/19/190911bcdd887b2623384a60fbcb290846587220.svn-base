<!--=== Breadcrumbs ===-->
<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="color-green pull-left" id="breadcrumb" >${_as}</h1>

        <ul class="pull-right breadcrumb">           
            <!--For the Cellule Pages-->
            #{if _laCellule}
            <li class="${request?.action == 'Cellule.bureauWelcome' ? 'active' : ''}"><a href="@{Cellule.bureauWelcome}">La Cellule</a><span class="divider"></span></li>
            #{if _ext}
            <li class="active">${_ext=='Le Bureau' ? 'Le Bureau' : (_ext=='Cotisation' ? 'Cotisation' : (_ext=='Announces' ? 'Annonces' : (_ext=='Events' ? 'Evènements' : '')))}</li>
            #{/ if}
            #{/ if}

            <!--For the dendrite pages-->
            
            #{elseif _dendrite} 
            <li class="${request?.action == 'Dendrites.dendrites' ? 'active' : ''}"><a href="@{Dendrites.dendrites}">Les Dendrites</a><span class="divider"></span></li>
            #{if _ext}  
            <li ><a href="@{Dendrites.dendrite(_dendrite?.id)}">${_dendrite?.named}</a><span class="divider"></span></li>
            <li class="active">${_ext=='Events' ? 'Evènements' : (_ext=='Announces' ? 'Annonces' : (_ext=='Le Bureau' ? 'Le Bureau' : (_ext=='Elections' ? 'Elections' : '')))}</li>
            #{/ if}
            #{else} 
            <li class="active" >${_dendrite?.named} </li>
            #{/else}
            #{/ elseif}
            

            
            <!--When in the Article pages-->
            
            #{elseif _as=="Les articles"}
            <li class="${request?.action == 'Articles.articles' ? 'active' : ''}"><a href="@{Articles.articles}">Les Articles</a><span class="divider"></span></li>
            #{if _ext}
            <li class="active">${_ext=='Edition Article' ? 'Edition Article': ''}</li>
            #{/ if}
            #{/ elseif}
            
            
            <!--When none of the above-->
            #{else}
            <li class="active">${_as}</li>
            #{/else}
        </ul>

    </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->



