<!--Recents tag-->
<!-- Search Bar -->
<form action="@{Articles.search}">
    <div class="headline" style="margin-bottom: 0px;"><h5>Trouver quelque chose</h5></div>
    <div class="input-append">
        <input type="text" class="span9" name="q">
        <button type="submit" class="btn-u">Go</button>
    </div>
</form>
<!-- Posts -->
<div class="posts">
    #{if _caller?.recents?.size()}
    <div class="headline" style="margin-bottom: 0px;"><h5>Les articles récents</h5></div>
    #{list items:_caller?.recents, as:'a'}
    #{if (a.myType() == 'article')}
    <dl class="dl-horizontal">
        <dt><a href="@{Users.user(a?.author.id, a?.author.username())}"><img src="${a?.author?.smallUrl()}" alt="" /></a></dt>
        <dd>
            <a href="@{Articles.article(a?.id, a?.title())}"><div class="recent-zone-texte">${a?.title}</div></a>
        </dd>
    </dl>
    #{/if}
    #{/list}
    #{/if}

    <!--Liste des annonces recentes-->
    #{if _caller?.recents?.size()}
    <div class="headline" style="margin-bottom: 0px;"><h5>Les annonces récentes</h5></div>
    #{list items:_caller?.recents, as:'a'}
    #{if (a.myType() == 'announce')}
    <dl class="dl-horizontal">
        <dt><a href="@{Users.user(a?.author.id, a?.author.username())}"><img src="${a?.author?.smallUrl()}" alt="" /></a></dt>
        <dd>
            <a href="@{Announces.announce(a?.id, a?.title())}"><div class="recent-zone-texte">${a?.title}</div></a>
        </dd>
    </dl>
    #{/if}
    #{/list}
    #{/if}

    <!--Les evenements recents-->
    #{if _caller?.recents?.size()}
    <div class="headline" style="margin-bottom: 0px;"><h5>Les évènements récents</h5></div>
    #{list items:_caller?.recents, as:'a'}
    #{if (a.myType() == 'event')}
    <dl class="dl-horizontal">
        <dt><a href="@{Users.user(a?.author.id, a?.author.username())}"><img src="${a?.author?.smallUrl()}" alt="" /></a></dt>    
        <dd>
            <a href="@{Events.event(a?.id, a?.title())}"><div class="recent-zone-texte">${a?.title}</div></a>
        </dd>
    </dl>
    #{/if}
    #{/list}
    #{/if}
    #{else}
    <p>Aucun article</p>
    #{/else}
</div><!--/posts-->