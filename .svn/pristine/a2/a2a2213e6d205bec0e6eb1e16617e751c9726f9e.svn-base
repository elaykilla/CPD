#{extends 'main.html' /}

<div class="container-fluid">
    #{if ext}
    #{subtitleTag as:'La Cellule', ext:ext, laCellule:laCellule /}
    #{/ if}
    #{else}
    #{subtitleTag as:'La Cellule' /}
    #{/else}
    <div class="container-fluid">
        <div class="row-fluid">

            #{if connected}
            <div class="offset1 span2" align="left">

                <div id="fixed">
                    <div id="left-container"> 
                        <div class="sidebar-nav-fixed" id="leftMenu" >
                            <ul class="nav nav-tabs nav-stacked my-left-navbar">
                                <li  class="${request?.action == 'Cellule.bureauWelcome' ? 'active' : ''}">
                                    <a class="accordion-toggle" href="@{Cellule.bureauWelcome()}">
                                        <i class="icon-home"></i> Accueil
                                    </a>
                                </li>
                                <li  class="${request?.action == 'Cellule.leBureau' ? 'active' : ''}">
                                    <a class="accordion-toggle" href="@{Cellule.leBureau()}">
                                        <i class="icon-home"></i> Le Bureau
                                    </a>
                                </li>

                                <li class="${request?.action == 'Dendrites.dendrites' ? 'active' : ''}">
                                    <a class="accordion-toggle" href="@{Dendrites.dendrites}">
                                        <i class="icon-home"></i> Les Dendrites
                                    </a>
                                </li>
                                
                                <li class="${request?.action == 'Cellule.payment' ? 'active' : ''}">
                                    <a class="accordion-toggle" href="@{Cellule.payment()}">
                                        <i class="icon-home"></i> Cotiser/Faire Don
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>         
                </div>
            </div>
            #{/if}
            #{else}
            <div class="span1" align="left"></div>
            #{/else}
            #{if recents}
            <div class="span6" id="white-part">
                #{doLayout /}
            </div>
                      <div class="span2" id="recents">
                <!-- Search Bar -->
                <form action="@{Articles.search}">
                    <div class="headline"><h3>Trouver quelque chose</h3></div>
                    <div class="input-append  margin-bottom-20">
                        <input type="text" class="span9" name="q">
                        <button type="submit" class="btn-u">Search</button>
                    </div>
                </form>
                <!-- Posts -->
                <div class="posts margin-bottom-20">
                    #{if recents?.size()}
                    <div class="headline"><h3>Les articles récents</h3></div>
                    #{list items:recents, as:'a'}
                    <dl class="dl-horizontal" id="white-part">
                        #{if (a.myType() == 'article')}
                        <dt><a href="@{Users.user(a?.author.id)}"><img src="${a?.author?.smallUrl()}" alt="" /></a></dt>
                        <dd>
                            <a href="@{Articles.article(a?.id)}"><div class="zoneTexte">${a?.title}</div></a>
                        </dd>
                        #{/if}
                    </dl>
                    #{/list}
                    #{/if}

                    <!--Liste des annonces recentes-->
                    #{if recents?.size()}
                    <dl class="dl-horizontal">
                    <div class="headline"><h3>Les annonces récentes</h3></div>
                    #{list items:recents, as:'a'}
                    #{if (a.myType() == 'announce')}
                    <dt><a href="@{Users.user(a?.author.id)}"><img src="${a?.author?.smallUrl()}" alt="" /></a></dt>
                    <dd>
                        <a href="@{Announces.announce(a?.id)}"><div class="zoneTexte">${a?.title}</div></a>
                    </dd>
                    #{/if}
                    </dl>
                    #{/list}
                    #{/if}

                    <!--Les evenements recents-->
                    #{if recents?.size()}
                    <div class="headline"><h3>Les evènements récents</h3></div>
                    #{list items:recents, as:'a'}
                    <dl class="dl-horizontal">
                    #{if (a.myType() == 'event')}
                    <dt><a href="@{Users.user(a?.author.id)}"><img src="${a?.author?.smallUrl()}" alt="" /></a></dt>    
                    <dd>
                        <a href="@{Events.event(a?.id)}"><div class="zoneTexte">${a?.title}</div></a>
                    </dd>
                    #{/if}
                    </dl>
                    #{/list}
                    #{/if}


                    #{else}
                    <p>Aucun article</p>
                    #{/else}
                </div><!--/posts-->

            </div><!--/span3-->
            #{/if}
            #{else}
            <div class="span9">
                #{doLayout /}
            </div>
            #{/else}
        </div>
    </div>
</div>
