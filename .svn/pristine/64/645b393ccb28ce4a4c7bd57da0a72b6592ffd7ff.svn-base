#{extends 'Users/template.html' /}
#{set title:'Annonce de ' + user?.fullName() /}
<div class="container-fluid span9">
    #{if connected?.dendrite}
    <div style="float:right;" class="span3">
        <a class="btn btn-u" href="@{Announces.editAnnounce(connected?.dendrite?.id)}">Nouvel évènement</a>
    </div>
    #{/if}
    #{if announces?.size}
    #{announcesTag announces:announces, as:'dendrite' /}
    #{/if}
    #{else}
    <h2>${user?.fullName()} n'a pas encore publié d'annonce</h2>
    #{/else}
</div>