#{extends 'main.html' /}
#{set title:'Contact CPD' /}
#{subtitleTag as:'Contact' /}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="offset3"></div>
        <div class="container-fluid span9">
            <div class="row span12"> 
                #{if dendrites.size()}
                #{list items:dendrites, as:'d'}
                <div class="span6" style="margin-left: 0px; margin-right: 10px;">
                    <h2 class="color-green pull-left" style="color:#3498db; font-size:30px; margin-left: 40px;">${d?.named}</h2>
                    <!--<h2 class="titles">${id?.named}</h2>-->
                    <div class="span12"> 
                        #{if d?.photo}
                        <p>${d?.photo?.description} </p>
                        #{/if}
                        #{else}
                        <p>${d?.description} </p>
                        #{/else}
                        <a role="button" href="mailto:${d?.email}"
                           data-toggle="modal">Contacter</a>
                    </div>
                </div>
                #{/list}
                #{/if}
                #{else}
                <p>Aucune dendrite.</p>
                #{/else}
            </div>
        </div>
    </div>
</div>