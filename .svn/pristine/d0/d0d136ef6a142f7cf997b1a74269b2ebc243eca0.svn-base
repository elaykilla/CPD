#{extends 'Administration/template.html' /} 
#{set title:'Dendrites' /} 
#{if
dendrites.size()}
<div class="container-fluid span10">
    <table cellpadding="0" cellspacing="0" border="0"
           class="table table-striped table-bordered">
        <caption>
            <h4>La liste des dendrites</h4>
        </caption>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Action</th>
            </tr>
        </thead>
        #{list items:dendrites, as:'dendrite'}

        <tbody>
            <tr>
                <td><a href="@{Administration.editDendrite(dendrite?.id)}">${dendrite?.named}</a>
                    <br /> <strong>${dendrite?.description}</strong></td>
                <td><a class="pull-right"
                       href="@{Administration.deleteDendrite(dendrite?.id)}"
                       onclick="return(confirm('Êtes vous sûr de vouloir supprimer cette dendrite ?'));"><button
                            class="btn btn-danger">X</button> </a></td>
                <td><a class="pull-right"
                       href="@{Administration.editDendrite(dendrite?.id)}"><button
                            class="btn btn-u">Edit</button> </a></td>
            </tr>
        </tbody>
        #{/list}
    </table>
    #{/if} #{else}
    <p>Aucune dendrite.</p>
    #{/else}
</div>