#{extends 'Administration/template.html' /} 
#{set title:'Elections' /} 
#{if elections.size()}
<div class="container-fluid span10">
    <table cellpadding="0" cellspacing="0" border="0"
           class="table table-striped table-bordered">
        <caption>
            <h4>La liste des elections</h4>
        </caption>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Action</th>
            </tr>
        </thead>
        #{list items:elections, as:'election'}

        <tbody>
            <tr>
                <td><a href="@{Administration.editElection(election?.id)}">${election?.code}</a>
                    <br /> <strong>${election?.description}</strong> <br />
                    <span>Election de la dendrite de <a href="@{Dendrites.dendrite(election?.dendrite?.id)}">${election?.dendrite?.named}</a></span></td>
                <td><a class="pull-right"
                       href="@{Administration.deleteElection(election?.id)}"
                       onclick="return(confirm('Êtes vous sûr de vouloir supprimer cette election ?'));"><button
                            class="btn btn-danger">X</button> </a></td>
                <td><a class="pull-right"
                       href="@{Administration.editElection(election?.id)}"><button
                            class="btn btn-u">Edit</button> </a></td>
            </tr>
        </tbody>
        #{/list}
    </table>
    #{/if} #{else}
    <p>Aucune election.</p>
    #{/else}
</div>