
<!--Receives dendrite-->
#{extends 'Dendrites/template.html' /} 
#{set title:'Dendrite - ' + dendrite?.named /}
<div class="container-fluid span12">
    <div class="row-fluid">    

        <div class="span9">
            <h2 id="pCenter">Bienvenue à la dendrite de ${dendrite?.named}</h2>
            <div class="row-fluid blog-page blog-item">
                #{if (dendrite?.events.size() > 0 || dendrite?.announces.size() > 0)}
                #{if (dendrite?.events.size() > 0)}
                <h2>Evènements</h2>
                #{eventsTag events:dendrite?.events, as:'dendrite'/}
                #{/if}
                #{if (dendrite?.announces.size() > 0)}
                <h2>Annonces</h2>
                #{announcesTag announces:dendrite?.announces, as:'dendrite' /}
                #{/if}
                #{/if}
                #{else}
                <h2>Les membres</h2>
                #{list items:dendrite?.users(), as:'user'}
                <div class="posts margin-bottom-20">
                    <dl class="dl-horizontal">
                        <dt><a href="@{Users.user(user?.id)}">
                            <img #{if user?.photo == null}  
                                src="@{'/public/images/election.jpg'}" #{/if} 
                                #{else} src="${user?.profileUrl()}" #{/else} alt="Mon image" alt="" />
                        </a>
                        <dd>
                            <a id="themecolor" href="@{Users.user(user?.id)}">${user?.fullName()}</a>
                            <hr style="margin-bottom: 0px;"/>
                            <span>${user?.dendrite?.named}</span> <span> ${user?.promotion} </span><br/>
                            <span>${user?.cv?.resume}</span>
                        </dd>
                    </dl>
                </div>
                #{/list}
                #{/else}
            </div><!--/blog-->
        </div>

        <div class="span2" id="recents">
            <!-- Search Bar -->
            
            <form action="@{Articles.search}">
                <div class="headline"><h3>Trouver quelque chose</h3></div>
                <div class="input-append  margin-bottom-20">
                    <input type="text" class="span9" name="q">
                    <button type="submit" class="btn-u">Search</button>
                </div>
            </form>
            <!-- Posts -->
            <div class="posts margin-bottom-20">
                #{if recents?.size()}
                <div class="headline"><h3>Les articles récents</h3></div>
                #{list items:recents, as:'a'}
                <dl class="dl-horizontal" id="white-part">
                    #{if (a.myType() == 'article')}
                    <dt><a href="@{Users.user(a?.author.id)}"><img src="${a?.author?.smallUrl()}" alt="" /></a></dt>
                    <dd>
                        <a href="@{Articles.article(a?.id)}"><div class="zoneTexte">${a?.title}</div></a>
                    </dd>
                    #{/if}
                </dl>
                #{/list}
                #{/if}

                <!--Liste des annonces recentes-->
                #{if recents?.size()}
                <dl class="dl-horizontal">
                    <div class="headline"><h3>Les annonces récentes</h3></div>
                    #{list items:recents, as:'a'}
                    #{if (a.myType() == 'announce')}
                    <dt><a href="@{Users.user(a?.author.id)}"><img src="${a?.author?.smallUrl()}" alt="" /></a></dt>
                    <dd>
                        <a href="@{Announces.announce(a?.id)}"><div class="zoneTexte">${a?.title}</div></a>
                    </dd>
                    #{/if}
                </dl>
                #{/list}
                #{/if}

                <!--Les evenements recents-->
                #{if recents?.size()}
                <div class="headline"><h3>Les evènements récents</h3></div>
                #{list items:recents, as:'a'}
                <dl class="dl-horizontal">
                    #{if (a.myType() == 'event')}
                    <dt><a href="@{Users.user(a?.author.id)}"><img src="${a?.author?.smallUrl()}" alt="" /></a></dt>    
                    <dd>
                        <a href="@{Events.event(a?.id)}"><div class="zoneTexte">${a?.title}</div></a>
                    </dd>
                    #{/if}
                </dl>
                #{/list}
                #{/if}


                #{else}
                <p>Aucun article</p>
                #{/else}
            </div><!--/posts-->

        </div><!--/span3-->
        <!--/span2-->
    </div>
</div>
