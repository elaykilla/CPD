<div class="blog margin-bottom-30">
    #{list items:_announces, as:'announce'}
    <div class="blog margin-bottom-30">
        #{if _as == 'dendrite'}
        <a href="@{Dendrites.announce(_caller.dendrite?.id, announce.id)}"><h3>${announce.title}</h3></a>
        #{/if}
        #{else}
        <a href="@{Announces.announce(announce.id)}"><h3>${announce.title}</h3></a>
        #{/else}
        <ul class="unstyled inline blog-info">
            <li><i class="icon-calendar"></i> ${announce.created.format('MMMM dd, yyyy')}</li>
            <li><i class="icon-comments"></i> <a href="#">${announce.comments.size()} Comment${announce.comments.size().pluralize()}</a></li>
        </ul>
        <div class="posts margin-bottom-20">
            <dl class="dl-horizontal">
                <dt><a href="@{Users.user(announce.author?.id)}"><img src="${announce.author?.smallUrl()}" alt="" /></a></dt>
                <dd>
                    #{if _as == 'dendrite'}
                    <a href="@{Dendrites.announce(_caller.dendrite?.id, announce.id)}"><div class="zoneTexte">${announce?.content}</div></a>
                    #{/if}
                    #{else}
                    <a href="@{Announces.announce(announce.id)}"><div class="zoneTexte">${announce?.content}</div></a>
                    #{/else}
                </dd>
            </dl>
        </div>
    </div>
    #{/list}
</div>
