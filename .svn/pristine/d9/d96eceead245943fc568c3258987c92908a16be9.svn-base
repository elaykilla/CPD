.pagination ul>form {
    display: inline;
}

.pagination ul>form>button, .pagination ul>li>a, .pagination ul>form>span {
    float: left;
    padding: 4px 12px;
    line-height: 20px;
    text-decoration: none;
    /*background-color: #fff;*/
    background-color: #3498db;
    border: 1px solid #ddd;
    border-left-width: 0;
}

.pagination ul>.active>button, .pagination ul>.active>a {
    color: #fff;
    cursor: default;
}



.pagination ul>form>button:hover, .pagination ul>li>a:hover, .pagination ul>.active>button, .pagination ul>.active>a {
    /*background-color: #f5f5f5;*/
    background-color: #72c02c;
}

.pagination form button, .pagination li a{
    color: #fff;
    padding: 5px 15px;
    border-radius: 0 !important;
}

.pagination li a{
    font-weight: bold;
}

.blog-page ul, .blog-page form {
    margin: 0 !important;
    padding: 0 !important;
}

.btn-active {
    border: 0;
    font-size: 14px;
    cursor: pointer;
    padding: 5px 13px;
    position: relative;
    background: #72c02c;
    display: inline-block;
    color: #fff !important;
    text-decoration: none !important;
}

.cachable-group .submenu {
    margin-left: 20px;
}

.message-active{
    background-color: #DFF0D8;
    border: 1px solid #D6E9C6;
    border-radius: 4px 4px 4px 4px;
    margin: 10px;
    padding: 19px;
}
.message-inactive{
    background-color: #F5F5F5;
    border: 1px solid #E3E3E3;
    border-radius: 4px 4px 4px 4px;
    margin: 10px;
    padding: 19px;
}

.message-date {
    float: right;
    color: gray;
}

.notready {
    background-color: beige;
    font-size: 15px;
    padding:10px;
}

.conversation-item {
    margin-bottom: 5px;
    border: #0099cc 2px solid;
}

.conversation-item .photo {
    float: left;
}

.conversation-content .name{
    font-weight:  bold;
}

.election-status{
    font-weight: bold;
    color: red;
    font-size: 16px;
    text-align: center;
}

.bootstrap-datetimepicker-widget{
    background: white;
}

.picker-switch{
    background: appworkspace;
}

.timepicker-picker td a{
    background: #3498db;
}

.navbar .btn-navbar{
    background: #3498db;
}

.navbar .btn-navbar:hover {
    background: #3498fb;
}

.btn-danger{
    margin-bottom: 3px;
}

.feedback-id{
    display: none;
}

/* Featurettes
------------------------- */

.featurette-divider {
    margin: 30px 0; /* Space out the Bootstrap <hr> more */
}
.featurette {
    padding-top: 120px; /* Vertically center images part 1: add padding above and below text. */
    overflow: hidden; /* Vertically center images part 2: clear their floats. */
}
.featurette-image {
    margin-top: -120px; /* Vertically center images part 3: negative margin up the image the same amount of the padding to center it. */
}

/* Give some space on the sides of the floated elements so text doesn't run right into it. */
.featurette-image.pull-left {
    margin-right: 40px;
}
.featurette-image.pull-right {
    margin-left: 40px;
}

/* Thin out the marketing headings */
.featurette-heading {
    font-size: 30px;
    font-weight: 300;
    line-height: 1;
    letter-spacing: -1px;
}
.featurette-text {
    font-size: 18px;
    font-weight: 200;
    line-height: 30px;
    margin-bottom: 20px;
}
.marketing .span4 {
    text-align: center;
}
.marketing h2 {
    font-weight: normal;
}
.marketing .span4 p {
    margin-left: 10px;
    margin-right: 10px;
}
